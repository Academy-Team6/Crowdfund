@{
}
<h1> Backer Management</h1>
<hr />
To add a new backer press <a href="~/home/addbacker">here</a>
<hr />



<table id="backerTable" border="1" cellpadding="10" cellspacing="0">
    <tr>
        <th> Code</th>
        <th>Name</th>
        <th>Email</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @{ 
        foreach (var backer in Model.Backers)
        {
            <tr>
                <td> @backer.Id</td>
                <td> @backer.Name</td>
                <td> @backer.Email   </td>
                <td> <a href="~/home/updatebackerwithdetails/@backer.Id"><img src="~/images/update.png" width="25" /></a></td>
                <td> <a href="~/home/DeleteBackerFromView/@backer.Id"><img src="~/images/delete.png" width="25" /></a></td>
            </tr>
        } 
      }


</table>