@{ }
<h1> Backer Management</h1>
<hr />
To add , delete or find a backer press <a href="~/home/mbacker">here</a>
<hr />



<table id="backerTable" border="1" cellpadding="10" cellspacing="0" class="table table-hover table-borderless table-sm">
    <tr>
        <th> Code</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Update</th>
    </tr>

    @{ foreach (var backer in Model.Backers)
                    {
        <tr>
            <td> @backer.Id</td>
            <td> @backer.FirstName</td>
            <td> @backer.LastName</td>
            <td> @backer.Email   </td>
            <td> <a href="~/home/UpdateBacker/@backer.Id"><img src="~/images/update.png" width="25" /></a></td>
        </tr> } }


</table>