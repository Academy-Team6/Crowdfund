@{ }
<h1> Backer Management</h1>
<hr />
To add,update or delete a backer press <a href="~/home/mbacker">here</a>
<hr />



<table id="backerTable" border="1" cellpadding="10" cellspacing="0">
    <tr>
        <th> Code</th>
        <th>Name</th>
        <th>Email</th>
    </tr>

    @{ foreach (var backer in Model.Backers)
                    {
        <tr>
            <td> @backer.Id</td>
            <td> @backer.FirstName</td>
            <td> @backer.LastName</td>
            <td> @backer.Email   </td>
        </tr> } }


</table>