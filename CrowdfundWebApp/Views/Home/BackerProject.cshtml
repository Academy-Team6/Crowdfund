*@
@{
}

<h1>All Projects List</h1> 

<table class="table table-borderless table-hover table-sm table-info" id="ProjectTable">
    <thead class="thead-light">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">TargetBudget</th>
            <th scope="col">CurrentBudget</th>
            <th scope="col">BudgetRatio</th>
            <th scope="col">Project Details</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var project in Model.Projects)
            {
                <tr>
                    <td>@project.Id</td>
                    <td>@project.Title</td>
                    <td>@project.Category</td>
                    <td>@project.Description</td>
                    <td>@project.TargetBudget</td>
                    <td>@project.CurrentBudget</td>
                    <td>@project.BudgetRatio</td>
                    <td><img src="~/images/dots.png" width="25" onclick="viewProject(@project.Id)" /></td>
                </tr>
            }
        }
    </tbody>
</table>
