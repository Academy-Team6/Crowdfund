<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Browse By Category</h1>
        <p class="lead text-muted">Basic categories included</p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">

            @foreach (string category in Enum.GetNames(typeof(ProjectCategory)))
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQk0F2NHioHCnpGPHGPB0iwDYU69G-F4BPXnA&usqp=CAU" >
                        <div class="card-body">
                            <h2>@category </h2>
                            <div class="d-flex justify-content-between align-items-center">  
                                <a asp-controller="Home" asp-action="Browse"asp-route-category="@category">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>