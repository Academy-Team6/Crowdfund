@model ProjectModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>My Dashboard</h1>
To add a new project press <a href="~/home/addproject">here</a>
<div class="container">
    <div class="row font-weight-bold">
        <div class="col">Title</div>
        <div class="col-4">Description</div>
        <div class="col">%Ratio%</div>
        <div class="col">Update</div>
        <div class="col">Add Media</div>
        <div class="col">Add Reward</div>
        <div class="col">Delete</div>
        <div class="col">Status Updates</div>
    </div>
    @{
        foreach (var p in Model.Projects)
        {

            <div class="row">
                <div class="col"><a href="/home/viewproject?projectId=@p.Id">@p.Title</a></div>
                <div class="col-4">@p.Description</div>
                <div class="col">@Math.Round(p.BudgetRatio,3)</div>
                <div class="col"> <a href="~/home/UpdateProject/@p.Id"><img src="~/images/update.png" width="25" /></a></div>
                <div class="col"> <img src="~/images/AddMedia.png" width="25" onclick="prepareForMediaAdd(@p.Id)" /></div>
                <div class="col"> <img src="~/images/AddRewardPackage.jpg" width="25" onclick="addRewardPackageWithId(@p.Id)" /></div>
                <div class="col"> <a href="~/home/DeleteProject/@p.Id"><img src="~/images/delete.png" width="25" /></a></div>
                <div class="col"><img src="~/images/bird.jpg" width="25" onclick="prepareTweet(@p.Id)"/></div>
            </div>
            <div class="row">
                <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @p.BudgetRatio; color: #3a2075" aria-valuenow=@p.BudgetRatio aria-valuemin="0" aria-valuemax="100">
                    @p.BudgetRatio % of TargetBudget:@p.TargetBudget $
                </div>
            </div>
        }
    }
</div>



