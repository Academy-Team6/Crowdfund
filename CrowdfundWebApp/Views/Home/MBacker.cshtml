<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-sm-12" >
            
    <h1> Add Backer</h1>

    <form id="createBackerForm">
        <table align="center">
            <tr align="center">
                <td>
                    Name
                </td>
                <td> <input type="text" id="Name" placeholder="Name" /></td>
            </tr>

            <tr align="center">
                <td>
                    Email
                </td>
                <td>
                    <input type="text" id="Email" placeholder="Email" />
                </td>
            </tr>
            <tr align="center">
                <td>
                    <input type="button" value="Submit" onclick="addBacker()" />
                </td>
            </tr>
        </table>
        <div id="result" name="result"></div>
    </form>

        </div>
        <div class="col-md-4 col-sm-12">
            <h1> Delete Backer</h1>

            <form>
                <table align="center">

                    <tr align="center">
                        <td>
                            Backer Id
                        </td>
                        <td> <input type="text" id="Id" /></td>
                    </tr>
                    <tr align="center">
                        <td>
                            <input type="button" value="Submit data" onclick="deleteBacker()" />
                        </td>
                    </tr>
                </table>
            </form>
        </div>
        <div class="col-md-4 col-sm-12">
            <h1> Find Backer</h1>

            <form>
                <table align="center">

                    <tr align="center">
                        <td>
                            Backer name
                        </td>
                        <td> <input type="text" id="searchText" /></td>
                    </tr>

                    <tr align="center">
                        <td>
                            <input type="button" value="Submit data" onclick="findBacker()" />
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
    </div>
    

    

    
