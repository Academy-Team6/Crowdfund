@model ProjectModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>All Projects</h1>
<div class="container">

    <div class="row font-weight-bold">
        <div class="col">Title</div>
        <div class="col-2">Description</div>
        <div class="col-4">Progress</div>
    </div>
    @{
        foreach (var p in Model.Projects)
        {

        <div class="row">
            <div class="col"><a href="/home/viewproject?projectId=@p.Id">@p.Title</a></div>
            <div class="col-2">@p.Description</div>
            <div class="col-4">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active" role="progressbar"
                         aria-valuenow="@p.BudgetRatio" aria-valuemin="0" aria-valuemax="100" style="width:@p.BudgetRatio%">
                        @p.BudgetRatio%
                    </div>
                </div>
            </div>
            </div>
            }
            }
        </div>


