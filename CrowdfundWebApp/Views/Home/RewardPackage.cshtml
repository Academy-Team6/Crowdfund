@model CrowdfundWebApp.Models.RewardPackageModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Reward Package Management</h1>
<hr />
To create a new reward package press <a href="~/home/addrewardpackage">here</a>

<table id="RewardPackageTable" border="1" cellpadding="10" cellspacing="0">
  <tr>
         <th>Id</th>
         <th>Price</th>
         <th>Project</th>
         <th>Reward</th>
  </tr>
  @{
     foreach (var rewardPackage in Model.RewardPackages)
     {
      <tr>
          <td>@rewardPackage.Id</td>
          <td>@rewardPackage.Price</td>
          <td>@rewardPackage.ProjectId</td>
          <td>@rewardPackage.Reward</td>
          <td> <a href="~/home/UpdateRewardPackages/@rewardPackage.Id"><img src="~/images/update.png" width="25" /></a></td>
          <td> <a href="~/home/DeleteRewardPackages/@rewardPackage.Id"><img src="~/images/delete.png" width="25" /></a></td>
      </tr>
     }
  }
</table>
