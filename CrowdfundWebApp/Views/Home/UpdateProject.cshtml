@{
}

<h1>Update Project</h1>

<form>
    <table align="center" class="table table-hover table-borderless table-sm table-info">
        <tr align="center">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Title</span>
                </div>
                <input type="text" class="form-control" aria-label="Small" id="Title" value="@Model.Project.Title"  aria-describedby="inputGroup-sizing-sm">
            </div>
        </tr>
        <tr align="center">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Category</span>
                </div>
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="Category" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        @Model.Project.Category
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a href="#" data-value="Tech" style="color:black">Tech</a></li>
                        <li><a href="#" data-value="Art" style="color:black">Art</a></li>
                        <li><a href="#" data-value="Sports" style="color:black">Sports</a></li>
                        <li><a href="#" data-value="Health" style="color:black">Health</a></li>
                        <li><a href="#" data-value="Industry" style="color:black">Industry</a></li>
                        <li><a href="#" data-value="Business" style="color:black">Business</a></li>
                        <li><a href="#" data-value="Gadget" style="color:black">Gadget</a></li>
                        <li><a href="#" data-value="Clothing" style="color:black">Clothing</a></li>
                    </ul>
                </div>
            </div>
        </tr>
        <tr align="center">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Description</span>
                </div>
                <input type="text" class="form-control" aria-label="Small" id="Description" value="@Model.Project.Description" aria-describedby="inputGroup-sizing-sm">
            </div>
        </tr>
        <tr align="center">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">TargetBudget</span>
                </div>
                <input type="text" class="form-control" aria-label="Small" id="TargetBudget" value="@Model.Project.TargetBudget" aria-describedby="inputGroup-sizing-sm">
            </div>
        </tr>
        <tr align="center">
            <td>
                <input type="button" value="Submit data" onclick="updateProject()" />
            </td>
        </tr>
    </table>
</form>
