@model ProjectOptionModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Project Update id=@Model.Project.Id</h1>

<form>
    <table align="center">
        <tr align="center">
            <td>
                Id
            </td>
            <td> <input type="text" id="Id" value="@Model.Project.Id" readonly /></td>
        </tr>
        <tr align="center">
            <td>
                Title
            </td>
            <td> <input type="text" id="Title" value="@Model.Project.Title" /></td>
        </tr>
        <tr align="center">
            <td>
                Category
            </td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="Category" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Category
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a href="#" data-value="Tech" style="color:black">Tech</a></li>
                        <li><a href="#" data-value="Food" style="color:black">Food</a></li>
                        <li><a href="#" data-value="Clothing" style="color:black">Clothing</a></li>
                        <li><a href="#" data-value="Travel" style="color:black">Travel</a></li>
                    </ul>
                </div>
            </td>
        </tr>
        <tr align="center">
            <td>
                Description
            </td>
            <td>
                <input type="text" id="Description" value="@Model.Project.Description" />

            </td>
        </tr>
        <tr align="center">
            <td>
                Target Budget
            </td>
            <td>
                <input type="text" id="TargetBudget" value="@Model.Project.TargetBudget" />

            </td>
        </tr>
        <tr align="center">
            <td>
                <input type="button" value="Submit data" onclick="updateProject()" />
            </td>
        </tr>
    </table>
</form>
