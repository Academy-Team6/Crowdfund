@model ProjectViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<a class="btn btn-primary" href="#" role="button">Link</a>
<tr>
    <th>Category</th>
    <th>Description</th>
    <th>TargetBudget</th>
    <th>CurrentBudget</th>
    <th>BudgetRatio</th>
    <th>Project Details</th>
</tr>

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@Model.Project.Title</h1>
        <p class="lead text-muted">Category:@Model.Project.Category-About:@Model.Project.Description</p>
        <p>
            <a href="#" class="btn btn-primary my-2">Reward Packages</a>
        </p>
    </div>
</section>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @{
            foreach (var m in Model.Media)
            { 
                <div class="carousel-item active">
                    <img class="d-block w-100" src=@m.Payload alt=@m.Id>
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
